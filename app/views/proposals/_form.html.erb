<%= simple_form_for @proposal do |f| %>
  <% if notification = f.error_notification %>
    <div class="alert alert-error fade in">
      <%= notification %>
    </div>
  <% end %>
  <%= f.input :title %>
  <%= f.input :description, as: :markdown %>
  <%= f.button :submit, "Preview proposal", name: "preview", class: "btn btn-secondary" %>
  <%= f.button :submit, "#{f.object.new_record? ? "Submit" : "Update"} proposal", class: "btn btn-primary" %>
<% end %>

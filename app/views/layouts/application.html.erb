<!DOCTYPE html>
<html>
<head>
  <title><%= render_page_title %></title>
  <%= stylesheet_link_tag :application %>
  <%= javascript_include_tag :application %>
  <%= csrf_meta_tag %>
  <%= yield :head %>
  <% if Settings.google_analytics.enabled %>
  <%= render 'shared/analytics' %>
  <% end %>
</head>
<body class="">
  <div class="">

    <div id="nav">
      <ul class="centered clearfix">
        <li><a class="ir" href="/">Euruko 2013</a></li>
        <li><a href="/#contact">Contact</a></li>
        <li><a href="/#sponsors">Sponsors</a></li>
        <li><a href="/#venue">Venue</a></li>
        <li><a href="/#tickets">Tickets</a></li>
        <li><a href="/#speakers">Speakers</a></li>
        <li><a href="/#about">About</a></li>
       </ul>
    </div>

    <header style ='display:none'>
      <div class="row">

        <div class="span7">
          <ul class="nav nav-pills pull-right">
            <li<%= active_nav_class(about_path, anonymous_proposals_path, the_vestibule_process_path) %>><%= link_to "About", about_path %></li>
            <li<%= active_nav_class(proposals_path) %>><%= link_to "Proposals", proposals_path %></li>
            <li<%= active_nav_class(motivation_path, complete_motivation_path) %>><%= link_to "Motivations", motivation_path %></li>
            <% if user_signed_in? -%>
              <li class="dropdown <%= 'active' if active_nav?(dashboard_path, user_path(current_user)) %>">
                <a class="dropdown-toggle"
                   data-toggle="dropdown"
                   href="#">
                  <%= current_user.name %>
                  <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li<%= active_nav_class(dashboard_path) %>><%= link_to "Dashboard", dashboard_path %></li>
                  <li><%= link_to "All proposals", proposals_path %></li>
                  <li<%= active_nav_class(user_path(current_user)) %>><%= link_to "Your profile", user_path(current_user) %></li>
                  <li><%= link_to "Sign out", logout_path %></li>
                </ul>
              </li>
            <% else -%>
              <li class="dropdown">
                <a class="dropdown-toggle"
                   data-toggle="dropdown"
                   href="#">
                  Sign in
                  <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Google", "/auth/google" %></li>
                  <li><%= link_to "Twitter", "/auth/twitter" %></li>
                  <li><%= link_to "Github", "/auth/github" %></li>
                  <li><%= link_to "Facebook", "/auth/facebook" %></li>
                </ul>
              </li>
            <% end -%>
          </ul>
        </div>
      </div>
    </header>

    <div id="cfp">
      <div class="section">
        <section id="notices">
          <%= render "shared/notices" %>

          <% if remind_account_for_signup_reason -%>
          <div class="alert">
            Other attendees are wondering what you hope to get out of <%= Settings.event_name %>.
            <%= link_to "Tell them now", edit_user_path(current_user) %>.
          </div>
          <% end -%>
        </section>

        <%= yield %>
      </div>
      <footer>
        <p><a href='/codeofconduct'>Code of condct</a></p>
      </footer>
    </div>
  </div>
</body>
</html>
